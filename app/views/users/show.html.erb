<section class="dashboard-main">
  <h1> <%= @facade.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <%= button_to 'Connect to Github', github_path, method: 'get', class: 'btn btn-primary' %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= @facade.first_name  %> <%= @facade.last_name %> </li>
    <li> <%= @facade.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
    <% if @facade.repos %>

      <h1>Github</h1>
      <ul class="github_repos">
        <% @facade.repos.each do |repo| %>
          <li ><a href="<%=repo.html_url%>" class="name"><%= repo.name %></a></li>
        <% end %>
      </ul>
    <% end %>
    <% if @facade.followers %>
      <h1>Followers</h1>
      <ul class="followers">
        <% @facade.followers.each do |follower| %>
          <li ><a href="<%=follower.html_url%>" class="login"><%= follower.login %></a></li>
        <% end %>
      </ul>
    <% end %>

    <% if @facade.following %>
      <h1>Following</h1>
      <ul class="following">
        <% @facade.following.each do |follow| %>
          <li ><a href="<%=follow.html_url%>" class="follow_login"><%= follow.login %></a></li>
        <% end %>
      </ul>
    <% end %>
  </section>
</section>
